<?xml version="1.0" encoding="UTF-8"?>
<project name="test-jenkins" default="build">
    <target name="build"
            depends="prepare, phploc"
            description=""/>

    <target name="clean-dir"
            description="Cleanup build artifacts">
        <delete dir="${basedir}/build/logs" />
    </target>

    <target name="init-var"
            description="Init variables values">
        <property name="phpcs" value="1" />
    </target>

    <target name="init-dir"
            description="Create directories and files">
        <mkdir dir="${basedir}/build/logs" />
        <touch file="${basedir}/build/logs/comment.md" />
    </target>

    <target name="prepare"
            depends="clean-dir, init-var"
            description="Prepare for build">
    </target>

    <target name="phploc"
            description="Measure project size using PHPLOC and print human readable output. Intended for usage on the command line.">
        <exec executable="phploc">
            <arg value="--log-csv" />
            <arg path="${basedir}/build/logs/phploc.csv" />
            <arg path="${basedir}/docroot/sites/all/modules/custom" />
            <arg value="--names"/>
            <arg value="*.php,*.inc,*.install,*.module,*.test,*.theme,*.engine" />
        </exec>
        <echo message="Ici pour phploc" />
    </target>

    <target name="phpcs"
            description="Find coding standard violations using PHP_CodeSniffer and print human readable output. Intended for usage on the command line before committing.">
        <exec executable="phpcs" output="${basedir}/build/logs/comment.md" resultproperty="phpcs">
            <arg value="--standard=Drupal" />
            <arg value="--report=full" />
            <arg path="${basedir}/docroot/sites/all/modules/custom/custom_main/custom_main.module" />
        </exec>
    </target>

    <fail message="Build failed">
        <condition>
            <not>
                <equals arg1="${phpcs}" arg2="0"/>
            </not>
        </condition>
    </fail>
</project>